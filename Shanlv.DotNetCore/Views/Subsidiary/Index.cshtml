@model IEnumerable<SubsidiaryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubsidiaryName)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubsidiaryName)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.SubsidiaryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SubsidiaryId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SubsidiaryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
